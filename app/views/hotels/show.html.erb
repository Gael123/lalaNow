
<div class="show-container" style="background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('<%= cl_image_path @superhero.photo, crop: :fill %>');">

    <div class="show-info">
      <h1><%= @hotel.name %></h1>
        <h5>$<%= @hotel.address %> </h5>
        <p class="mt-4"><%= @hotel.stars%></p>
        <a href="#location-map" class="map-link"><p class="mb-5"><i class="fas fa-map-marker-alt mr-2", style="color: #e62328;"></i><%= @superhero.location %></p></a>
        <div>
          <%= link_to 'Back to hotels', hotels_path, class: "btn-ghost"  %>

        </div>
    </div>
</div>

